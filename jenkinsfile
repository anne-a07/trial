pipeline {
    agent any
    
    stages {
        stage('Login, Build and Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'Docker') {
                        docker.build('anne07/flask').push('latest')
                    }
                }
            }
        }
        stage('AWS Commands') {
            steps {
                script {
                    withAWS(credentials: 'AWS-cred', region: 'use-east-1') {
                        sh 'aws sts get-caller-identity'
                    }
                }
            }
        }
    }
}