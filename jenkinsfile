pipeline {
    agent any

    environment {
        DOCKER = credentials('Docker')
    }

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t anne07/flask .'
            }
        }
        stage('Login') {
            steps {
                echo '$DOCKER | docker login -u anne07 --password-stdin'
            }
        }
        stage('Push') {
            stepd {
                sh 'docker push anne07/flask'
            }
        }
    }
}